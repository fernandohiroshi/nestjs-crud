# Application
PORT=3000                  # Port the application will run on
NODE_ENV=development       # Environment mode (development, production, test)

# Database (Development)
DATABASE_TYPE=database             # Database type
DATABASE_HOST=localhost            # Database host
DATABASE_PORT=5432                 # Database port
DATABASE_USERNAME=user             # Database username
DATABASE_PASSWORD=password         # Database password
DATABASE_NAME=app_db               # Database name
DATABASE_AUTO_LOAD_ENTITIES=1      # Auto-load entities (1 = true, 0 = false)
DATABASE_SYNCHRONIZE=0             # Synchronize database schema (1 = true, 0 = false)

# JWT (Authentication)
JWT_SECRET=your_jwt_secret         # Secret key for signing JWTs
JWT_TOKEN_AUDIENCE=http://localhost:3000  # Audience for JWT tokens
JWT_TOKEN_ISSUER=http://localhost:3000    # Issuer of JWT tokens
JWT_TTL=3600                       # JWT time-to-live in seconds (1 hour)
JWT_REFRESH_TTL=43200               # JWT refresh token TTL in seconds (12 hours)

# Database (Testing)
DATABASE_TYPE_TEST=postgres
DATABASE_HOST_TEST=localhost
DATABASE_PORT_TEST=5432
DATABASE_USERNAME_TEST=user
DATABASE_PASSWORD_TEST=password
DATABASE_NAME_TEST=app_db_test
DATABASE_AUTO_LOAD_ENTITIES_TEST=1
DATABASE_SYNCHRONIZE_TEST=1
